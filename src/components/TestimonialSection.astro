---
import { fetchStrapi, type Testimonial } from "../lib/strapi";
import TestimonialComponent from "./Testimonial.astro";

// Fetch testimonials and filter for featured ones
const testimonialsResponse = await fetchStrapi<Testimonial>("testimonials?populate=avatar&filters[isFeatured][$eq]=true");
const testimonials = testimonialsResponse?.data || [];
---

<section class="py-20 bg-cream-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-center mb-4 text-primary-600">
      What Our Customers Say
    </h2>
    <p class="text-center text-gray-600 mb-12 text-lg">
      Real reviews from real people who love our food
    </p>

    {testimonials.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <TestimonialComponent item={testimonial} />
        ))}
      </div>
    ) : (
      <div class="text-center">
        <div class="bg-white rounded-lg shadow-md p-12 max-w-2xl mx-auto border-2 border-orange-100">
          <div class="text-6xl mb-4">‚≠ê</div>
          <h3 class="text-2xl font-bold text-primary-600 mb-3">
            Customer Reviews Coming Soon
          </h3>
          <p class="text-gray-600 mb-4">
            We're collecting testimonials from our happy customers. Check back soon!
          </p>
          <div class="bg-cream-50 rounded-lg p-4 text-left text-sm">
            <p class="font-semibold text-primary-600 mb-2">
              To add testimonials:
            </p>
            <ol class="list-decimal list-inside space-y-1 text-gray-600">
              <li>Create the Testimonial content type in Strapi</li>
              <li>Add fields: customerName, review, rating, avatar, title, isVerified, isFeatured</li>
              <li>Mark testimonials as "isFeatured: true" to display on homepage</li>
              <li>Rebuild your site to see changes</li>
            </ol>
          </div>
        </div>
      </div>
    )}
  </div>
</section>
