---
import { downloadStrapiImage, type MenuItem } from "../lib/strapi";

interface Props {
  item: MenuItem;
}

const { item } = Astro.props;
const { name, description, price, isMadeToOrder, image, cuisine } =
  item.attributes;

// Download image at build time and get local path
const imageUrl = await downloadStrapiImage(image?.data?.attributes?.url);
const cuisineName = cuisine?.data?.attributes?.name;
---

<div
  class="group bg-white rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 h-full flex flex-col border-2 border-orange-100 hover:border-accent-300"
>
  <div class="relative aspect-[16/11] overflow-hidden bg-gray-100">
    {
      imageUrl ? (
        <img
          src={imageUrl}
          alt={name}
          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary-500 to-primary-600 text-white font-bold text-2xl">
          <span class="opacity-90">YumYum</span>
        </div>
      )
    }

    {
      (isMadeToOrder || cuisineName) && (
        <div class="absolute top-4 right-4 flex flex-col gap-2 items-end">
          {isMadeToOrder && (
            <span class="px-3 py-1.5 rounded-full text-xs font-bold bg-accent-400 text-white shadow-lg">
              Made to Order
            </span>
          )}
          {cuisineName && (
            <span class="px-3 py-1.5 rounded-full text-xs font-bold bg-white text-primary-600 shadow-lg border border-primary-300">
              {cuisineName}
            </span>
          )}
        </div>
      )
    }
  </div>

  <div class="p-6 flex-grow flex flex-col">
    <div class="flex justify-between items-start gap-4 mb-3">
      <h3
        class="text-xl font-bold text-primary-700 leading-tight m-0 group-hover:text-accent-600 transition-colors"
      >
        {name}
      </h3>
      <span class="text-accent-600 font-bold text-xl whitespace-nowrap"
        >${price.toFixed(2)}</span
      >
    </div>

    {
      description && (
        <p class="text-gray-600 text-sm leading-relaxed m-0 line-clamp-3">
          {description}
        </p>
      )
    }
  </div>
</div>
